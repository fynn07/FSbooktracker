<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="org.example.crud.MainController">

    <VBox alignment="CENTER" layoutX="120.0" layoutY="65.0" spacing="10">

        <!-- Username -->
        <Label text="Username:" />
        <TextField fx:id="usernameField" />

        <!-- Password -->
        <Label text="Password:" />
        <PasswordField fx:id="passwordField" />

        <!-- New Password -->
        <Label text="New Password:" />
        <PasswordField fx:id="newPasswordField" />

        <!-- Submit Button -->
        <Button fx:id="changePasswordButton" text="Change Password" />
    </VBox>
   <Label layoutX="114.0" layoutY="14.0" style="-fx-font-size: 32; -fx-font-weight: bold;" text="BookTracker" />
   <Button onAction="#onLoginRedirectClick" fx:id="changePasswordButton1" layoutX="316.0" layoutY="21.0" prefHeight="26.0" prefWidth="57.0" style="-fx-background-color: orange; -fx-text-fill: white;" text="Back" />

</AnchorPane>
