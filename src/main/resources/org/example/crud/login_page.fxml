<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="300" prefWidth="400" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.crud.MainController">

    <children>
        <VBox alignment="CENTER" prefHeight="200" prefWidth="300" spacing="15" AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="50">
            <children>
            <Label style="-fx-font-size: 32; -fx-font-weight: bold;" text="BookTracker" />
                <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Login" />

                <Label text="Username:" />
                <TextField fx:id="usernameLoginField" promptText="Enter your username" />

                <Label text="Password:" />
                <PasswordField fx:id="passwordLoginField" promptText="Enter your password" />

                <Button onAction="#onLoginClick" fx:id="loginButton" minWidth="100" style="-fx-background-color: #007ACC; -fx-text-fill: white;" text="Login" />
                <Button onAction="#onSignupRedirectClick" fx:id="signUpButtonRedirect" minWidth="100" style="-fx-background-color: #007ACC; -fx-text-fill: white;" text="Sign Up" />
            </children>
        </VBox>
    </children>
</AnchorPane>
